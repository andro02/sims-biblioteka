<Window x:Class="Biblioteka.GUI.Librarians.LibrariansFirstTier.ExtendMembershipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka.GUI.Librarians.LibrariansFirstTier"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Extend Membership" Height="170" Width="280">
    <Grid>
        <Label Content="Client username:" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ClientUsernameTextBox" HorizontalAlignment="Right" Margin="0,25,20,0" TextWrapping="Wrap" Text="{Binding Path=ClientUsername, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <Button IsDefault="true" Click="ExtendMembershipButton_Click" Content="Extend membership" Padding="10 5" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" Width="220"/>
    </Grid>
</Window>
