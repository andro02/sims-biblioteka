<Window x:Class="Biblioteka.GUI.Librarians.LibrariansSecondTier.LibrarianSecondTierHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka.GUI.Librarians.LibrariansSecondTier"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Librarian Home Window" Height="450" Width="800">
    <Grid>
        <Button Click="AddNewBookButton_Click" Content="Add new book" HorizontalAlignment="Left" Margin="30,30,0,0" Padding="10 5" VerticalAlignment="Top" FontSize="14"/>
        <Button Click="AddNewBookCopyButton_Click" Content="Add new book copy" HorizontalAlignment="Left" Margin="170,30,0,0" Padding="10 5" VerticalAlignment="Top" FontSize="14"/>
        <Button Click="BookBorrowingButton_Click" Content="Book borrowing" HorizontalAlignment="Left" Margin="350,30,0,0" Padding="10 5" VerticalAlignment="Top" FontSize="14"/>
        <Button Click="ViewDeadlineExtensionRequestsButton_Click" Content="View Deadline extension requests" HorizontalAlignment="Left" Margin="500,30,0,0" Padding="10 5" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
